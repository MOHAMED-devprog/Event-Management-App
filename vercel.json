{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
     {
      "src": "/api/images",
      "methods": ["POST", "GET"],
      "dest": "backend/server.js"
    },
    {
      "src": "/api/delete/(.*)",
      "methods": ["DELETE"],
      "dest": "backend/server.js"
    },
    {
      "src": "/images/(.*)",
      "dest": "backend/images/$1"
    },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}


